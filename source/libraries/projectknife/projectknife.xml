<?xml version="1.0" encoding="utf-8"?>
<extension type="library" method="install" version="3.5">
    <!-- Extension info -->
    <name>Projectknife</name>
    <libraryname>projectknife</libraryname>
    <author>Tobias Kuhn</author>
    <creationDate>August 2016</creationDate>
    <copyright>Copyright (C) 2015 - 2016 Tobias Kuhn. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later.</license>
    <authorEmail>support@projectknife.net</authorEmail>
    <authorUrl>http://projectknife.net</authorUrl>
    <version>5.0.0.alpha.1</version>
    <description>LIB_PROJECTKNIFE_XML_DESCRIPTION</description>

    <!-- Site files -->
    <files>
        <folder>access</folder>
        <folder>application</folder>
        <folder>date</folder>
        <folder>form</folder>
        <folder>grid</folder>
        <folder>model</folder>
        <folder>toolbar</folder>
        <folder>user</folder>
        <folder>version</folder>
        <file>library.php</file>
    </files>

    <!-- Media files -->
    <media folder="media" destination="lib_projectknife">
        <folder>css</folder>
        <folder>js</folder>
    </media>

    <!-- Site language files -->
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.lib_projectknife.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.lib_projectknife.sys.ini</language>
    </languages>
</extension>