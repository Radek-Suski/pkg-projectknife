<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="basic" label="COM_PKDASHBOARD_BASIC_OPTIONS" description="COM_PKDASHBOARD_BASIC_OPTIONS_DESC">
        <field name="show_buttons" type="radio" class="btn-group btn-group-yesno" default="1" label="COM_PKDASHBOARD_BUTTONS">
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>
        <field name="buttons_per_row" type="list" default="3" label="COM_PKDASHBOARD_BUTTONS_PER_ROW">
			<option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="6">6</option>
            <option value="12">12</option>
		</field>
        <field name="max_button_img_size" type="list" default="64" label="COM_PKDASHBOARD_BUTTON_IMAGE_SIZE">
            <option value="32">32px</option>
            <option value="64">64px</option>
            <option value="128">128px</option>
            <option value="256">256px</option>
		</field>
    </fieldset>
</config>